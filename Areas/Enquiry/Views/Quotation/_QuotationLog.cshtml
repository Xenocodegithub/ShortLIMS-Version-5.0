@model IEnumerable<LIMS_DEMO.Areas.Enquiry.Models.QuotationLogModel>
<!-- Simple Datatable start -->
<div class="card-box mb-30">
    <div class="pb-20">
        <table class="data-table table nowrap">
            @if (Model.Count() > 0)
            {
                <tr class="thead-dark">
                    <th class="table-plus datatable-nosort">
                        Customer Name
                    </th>
                    <th>
                        Enquiry Id
                    </th>
                    <th>
                        Quotation No.
                    </th>
                    <th>
                        Quotation Sent On
                    </th>
                    <th>
                        Revised On
                    </th>
                    <th>
                        Remarks
                    </th>
                </tr>

                foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.CustomerName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EnquiryId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.QuotationNo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MailedOn)
                        </td>
                        <td>
                            @if (item.RevisedOn != null)
                            {
                                @Html.DisplayFor(modelItem => item.RevisedDate)
                                @Html.HiddenFor(modelItem => item.RevisedOn);
                            }
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Remarks)
                        </td>
                    </tr>
                }
            }
        </table>
    </div>
</div>
