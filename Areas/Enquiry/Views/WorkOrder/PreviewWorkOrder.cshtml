@model LIMS_DEMO.Areas.Enquiry.Models.WorkOrderListModel
@{
    ViewBag.Title = "_AddWorkOrderDetails";
}
@Html.HiddenFor(model => model.EnquiryId, new { @class = "form-control", @autocomplete = "false" })
@Html.HiddenFor(model => model.WorkOrderId, new { @class = "form-control", @autocomplete = "false" })

<div>
    <div class="form-group row">
        <label class="col-sm-12 col-md-2 col-form-label">Customer Name:</label>
        <div class="col-sm-4" style="margin-top: 9px;">
            @Html.DisplayFor(model => model.RegistrationName, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <label class="col-sm-12 col-md-2 col-form-label">Work Order Received On: </label>
        <div class="col-sm-4" style="margin-top: 9px;">
            @Html.DisplayFor(model => model.WorkOrderReceivedDate, new { htmlAttributes = new { @class = "form-control" } })
            @Html.HiddenFor(model => model.WorkOrderReceivedDate, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <label class="col-sm-12 col-md-2 col-form-label">Work Order No: </label>
        <div class="col-sm-4" style="margin-top: 9px;">
            @Html.DisplayFor(model => model.WorkOrderNo, new { htmlAttributes = new { @class = "form-control" } })
            @Html.HiddenFor(model => model.WorkOrderNo, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
</div>
<div class="col-sm-12">
    <table id="dtHorizontalExample" class="table1 table stripe hover initial">
        <thead>
            <tr class="thead-dark">
                <th class="table-plus datatable-nosort">
                    SrNo.
                </th>
                <th>
                    Sample No
                </th>
                <th>
                    SampleType
                </th>
                <th>
                    ParameterName
                </th>
                <th>
                    Unit Price
                </th>
                <th width="125px">
                    Total
                </th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.workorderList.Count; i++)
            {
                <tr>
                    <td>
                        @Model.workorderList[i].SrNo
                        @Html.HiddenFor(x => Model.workorderList[i].EnquirySampleID)
                    </td>
                    <td>
                        @Html.DisplayFor(x => Model.workorderList[i].DisplaySampleName, new { @class = "form-control" })
                        @Html.HiddenFor(x => Model.workorderList[i].SampleTypeProductName, new { @class = "form-control" })
                        @Html.HiddenFor(x => Model.workorderList[i].SampleName, new { @class = "form-control" })
                    </td>
                    <td>
                        @Html.DisplayFor(x => Model.workorderList[i].SampleTypeProductName, new { @class = "form-control" })
                        @Html.HiddenFor(x => Model.workorderList[i].DisplaySampleName, new { @class = "form-control" })
                        @Html.HiddenFor(x => Model.workorderList[i].SampleName, new { @class = "form-control" })
                    </td>
                    <td>
                        @Html.DisplayFor(x => Model.workorderList[i].ParameterName, new { @class = "form-control" })
                        @*@Html.EditorFor(x => Model.workorderList[i].ParameterName, new { @class = "form-control" })*@
                        @*@Html.ValidationMessageFor(x => Model.workorderList[i].ParameterName)*@
                    </td>

                    <td>
                        @Html.DisplayFor(x => Model.workorderList[i].UnitPrice, new { @class = "form-control" })
                        @Html.HiddenFor(x => Model.workorderList[i].UnitPrice)
                        @Html.ValidationMessageFor(x => Model.workorderList[i].UnitPrice)
                    </td>
                    <td>
                        @Html.TextBoxFor(x => Model.workorderList[i].Total, new { @readonly = "readonly", @class = "form-control", @style = "color:black;width: 100px;" })
                        @Html.ValidationMessageFor(x => Model.workorderList[i].Total)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<button type="button" onclick="Close();" class="btn btn-secondary btn-sm" data-dismiss="modal" style="float: right;">Close</button>

