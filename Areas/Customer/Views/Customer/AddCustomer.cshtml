                        </div>
                        <div class="form-group row">
                            <label class="col-sm-12 col-md-2 col-form-label">Email:</label>
                            <div class="col-sm-4">
                                @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @autocomplete = "false" })
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger col-md-10" })
                                @*<input type="date" id="EnquiryOn" name="EnquiryOn" class="input-group date col-sm-12" placeholder="dd/MM/yyyy" />*@
                            </div>
                            <label class="col-sm-12 col-md-2 col-form-label">PAN No.:</label>
                            <div class="col-sm-4">
                                @Html.TextBoxFor(model => model.PANNo, new { @class = "form-control", @autocomplete = "false" })
                                @Html.ValidationMessageFor(model => model.PANNo, "", new { @class = "text-danger col-md-10" })
