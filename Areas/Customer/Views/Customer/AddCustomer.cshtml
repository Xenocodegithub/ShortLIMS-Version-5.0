                            <label class="col-sm-12 col-md-2 col-form-label">City</label>
                            <div class="col-sm-4">
                                @Html.EditorFor(model => model.CityName, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-12 col-md-2 col-form-label">Taluka</label>
                            <div class="col-sm-4">
                                @Html.EditorFor(model => model.Taluka, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                            <label class="col-sm-12 col-md-2 col-form-label">Address</label>
                            <div class="col-sm-4">
                                @Html.EditorFor(model => model.Address1, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-5 col-md-2 col-form-label">Land Mark</label>
                            <div class="col-sm-4">
                                @Html.EditorFor(model => model.LandMark, new { htmlAttributes = new { @class = "form-control" } })
