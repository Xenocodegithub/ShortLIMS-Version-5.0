                        </div>
                        <div class="form-group row">
                            <label class="col-sm-12 col-md-2 col-form-label">Fax No.:</label>
                            <div class="col-sm-4">
                                @Html.TextBoxFor(model => model.FaxNo, new { @class = "form-control", @autocomplete = "false" })
                                @Html.ValidationMessageFor(model => model.FaxNo, "", new { @class = "text-danger col-md-10" })
                                @*<input type="date" id="EnquiryOn" name="EnquiryOn" class="input-group date col-sm-12" placeholder="dd/MM/yyyy" />*@
                            </div>
                            <label class="col-sm-12 col-md-2 col-form-label">CIN No.:</label>
                            <div class="col-sm-4">
                                @Html.TextBoxFor(model => model.CINNumber, new { @class = "form-control", @autocomplete = "false" })
                                @Html.ValidationMessageFor(model => model.CINNumber, "", new { @class = "text-danger col-md-10" })
                                @*<input type="date" id="EnquiryOn" name="EnquiryOn" class="input-group date col-sm-12" placeholder="dd/MM/yyyy" />*@
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-12 col-md-2 col-form-label">GST No.:</label>
                            <div class="col-sm-4">
                                @Html.TextBoxFor(model => model.GSTNo, new { @class = "form-control", @autocomplete = "false" })
                                @Html.ValidationMessageFor(model => model.GSTNo, "", new { @class = "text-danger col-md-10" })
                                @*<input type="date" id="EnquiryOn" name="EnquiryOn" class="input-group date col-sm-12" placeholder="dd/MM/yyyy" />*@
                            </div>
                            <label class="col-sm-12 col-md-2 col-form-label">PAN Upload:</label>
                            <div class="col-sm-4">
                                @Html.TextBoxFor(model => model.PANUpload, new { type = "file", htmlAttributes = new { @class = "form-control " } })
                                @Html.ValidationMessageFor(model => model.PANUpload, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-12 col-md-2 col-form-label">Address Proof Upload:</label>
                            <div class="col-sm-4 ">
                                @Html.TextBoxFor(model => model.AddressProofUpload, new { type = "file", htmlAttributes = new { @class = "form-control " } })
                                @Html.ValidationMessageFor(model => model.AddressProofUpload, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-sm-12 col-md-12">
                                <button type="submit" class="btn btn-info btn-sm" style="float:right">Save</button>
                                @*<a href="~/Enquiry/Contract/AddContract" class="btn btn-primary" style="background-color:mediumblue;color:white;" data-toggle="tooltip" data-placement="top" title="">Next</a>*@
                            </div>
                        </div>

                        }
