                @using (Ajax.BeginForm("AddCustomer", "Customer", new AjaxOptions() { HttpMethod = "Post", OnSuccess = "CustomerSuccess" }))
                {

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.CustomerMasterId)

                    <div class="form-group row">
                        <label class="col-sm-12 col-md-2 col-form-label">Registration Date:</label>
                        <div class="col-sm-4">
                            @Html.TextBoxFor(model => model.RegistrationDate, new { @class = "form-control date-picker", @autocomplete = "false" })
                            @Html.ValidationMessageFor(model => model.RegistrationDate, "", new { @class = "text-danger" })
                        </div>
                        <label class="col-sm-12 col-md-2 col-form-label">Customer Group:</label>
                        <div class="col-sm-4">
                            @Html.DropDownListFor(model => model.CustomerGroupId, new SelectList(ViewBag.CustomerGroups, "CustomerGroupId", "CustomerGroupType"), "Please Select", new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.CustomerGroupId, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-12 col-md-2 col-form-label">Customer Type <span style="color:red">*</span></label>
                        <div class="col-sm-4">
                            @Html.DropDownListFor(model => model.CustomerTypeId, new SelectList(ViewBag.CustomerTypes, "CustomerTypeId", "CustomerTypeName"), "Please Select", new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.CustomerTypeId, "", new { @class = "text-danger" })
                        </div>
                        <label class="col-sm-12 col-md-2 col-form-label">Company Type:</label>
                        <div class="col-sm-4">
                            @Html.DropDownListFor(model => model.CompanyTypeId, new SelectList(ViewBag.CompanyTypes, "CompanyTypeId", "CompanyType"), "Please Select", new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.CompanyTypeId, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-12 col-md-2 col-form-label">Registration Name:</label>
                        <div class="col-sm-4">
                            @Html.EditorFor(model => model.RegistrationName, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                        <label class="col-sm-12 col-md-2 col-form-label">Contact Person Name:</label>
                        <div class="col-sm-4">
                            @Html.EditorFor(model => model.ContactPersonName, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-12 col-md-2 col-form-label">Contact Person Designation:</label>
                        <div class="col-sm-4">
                            @Html.EditorFor(model => model.ContactDesignation, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                        <label class="col-sm-5 col-md-2 col-form-label">Contact Person Mobile No:</label>
                        <div class="col-sm-4">
                            @Html.EditorFor(model => model.ContactMobileNo, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-12 col-md-2 col-form-label">Contact Person Email:</label>
                        <div class="col-sm-4">
                            @Html.EditorFor(model => model.ContactEmail, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                        <label class="col-sm-12 col-md-2 col-form-label">Country:</label>
                        <div class="col-sm-4">
                            @Html.EditorFor(model => model.CountryName, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                     </div>
                        <div class="form-group row">
                            <label class="col-sm-12 col-md-2 col-form-label">State </label>
                            <div class="col-sm-4 ">
                                @Html.EditorFor(model => model.StateName, new { htmlAttributes = new { @class = "form-control" } })
