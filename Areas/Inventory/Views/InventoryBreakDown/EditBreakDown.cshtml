            dataType: 'json',
            success: function (result) {
                if (result != null) {
                    var $cloneRow = "";
                    for (i = 0; i < result.length; ++i) {
                        $cloneRow = $cloneRow + '<tr id="sample_' + i + '" datatableID = "' + result[i].NameOfInstrument + '" isdelete = "0" style="width:100%;">';
                        $cloneRow = $cloneRow + '<td>' + (i + 1) + '</td>';
