@model IEnumerable<LIMS_DEMO.Areas.Inventory.Models.InventoryBasicDetailModel>
@{
    ViewBag.Title = "NonConsumableList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="mobile-menu-overlay"></div>
<div class="main-container">
    <div class="pd-ltr-20 xs-pd-20-10">
        <div class="min-height-200px">
            <div class="page-header">
                <div class="row">
                    <div class="col-md-6 col-sm-12">
                        <div class="title">
                            <h4>Non-Consumable List</h4>
                        </div>
                        <nav aria-label="breadcrumb" role="navigation">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="index.html">Inventory</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Non-Consumable List</li>
                            </ol>
                        </nav>
                    </div>

                </div>
            </div>
            <div class="page-header card text-black bg-light card-box">
                <div class="card-header">Laboratory Instrument Report</div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-2">
                            @Html.Label("Catagory Name:")
                        </div>
                        <div class="col-sm-2">
                            <div class="form-group">
                                @Html.DropDownList("CatagoryId1", new SelectList(ViewBag.InvCategoryList, "CatagoryMasterID", "CategoryName"), "Select Item..", new { @class = "form-control " })
                            </div>
                        </div>
                        <div class="col-sm-1">
                            <div class="form-group">
                                <input type="button" value="Print" class="btn btn-success btn-sm" id="buttonPrint" name="buttonSearch" />
                            </div>
                        </div>
                        <div class="col-sm-1" style="border-left:3px solid green">
                            <div class="form-group">
                                <input type="button" value="Laboratory Instrument Report" class="btn btn-info btn-sm" id="buttonPrint2" name="" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Simple Datatable start -->
            <div class="pd-20 card-box mb-30">
                <div class="clearfix">
                    <div class="pull-left">
                        <h4 class="text-blue h4">Non Consumable List</h4>
                    </div>
                </div>
                <div class="pb-20">
                    <table class="data-table table stripe hover nowrap">
                        <thead>
                            <tr class="thead-dark">
                                <th class="table-plus datatable-nosort">Sr No</th>
                                <th>Inventory Number</th>
                                <th>Item Name</th>
                                <th>Category</th>
                                <th>Total Quantity</th>
                                <th>Unit</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>

                            @if (Model != null)
                            {
                                int SerialNumber = 1;
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@SerialNumber</td>
                                        <td>@item.InventoryBasicDetailsNumber</td>
                                        <td>@item.ItemName</td>
                                        <td>@item.CategoryName</td>
                                        <td>@item.Quantity</td>
                                        <td>@item.Unit</td>
                                        <td>
                                            <div class="btn-list">
                                                <a href="@Url.Action("Index","Inventory",new { @TypeID=item.TypeID,@ID=item.ID,@PurchaseRequestID=item.PurchaseRequestID,@InventoryBasicDetailsID=item.InventoryBasicDetailsID,@TotalQuantity=item.TotalQuantity,@ItemID=item.ItemID })" title="NewBill" id="rowedit_@SerialNumber" operation="NewBill" class="btn btn-info btn-sm">
                                                    New Bill
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                    ++SerialNumber;
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- Simple Datatable End -->
        </div>
    </div>
</div>
@*@Scripts.Render("~/bundles/jqueryval")*@
<script src="~/Scripts/jquery.validate-vsdoc.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
<script>

    $("#buttonPrint2").click(function () {
        debugger;
        if ($("#CatagoryId1 option:selected").val() == "") {
            alert('Please Enter Category Name');
        }
        else {
            var x = "/Reporting/frmShowReport.aspx?path=LaboratoryInstrumentReport.rdl&CategoryName=" + $("#CatagoryId1 option:selected").text(); + "";
            window.location = x;
        }
    });
    $("#buttonPrint").click(function () {
        debugger;
        var CatagoryID = $("#CatagoryId1 option:selected").text()
        CatagoryID = CatagoryID.toLocaleLowerCase();
        if ($("#CatagoryId1 option:selected").val() == "") {
            alert('Please Select Catagory');
        } else {
            alert('Reporit is open Please Wait');
            if (CatagoryID == "glassware class b" || CatagoryID == "glassware class a") {
                var x = "/Reporting/frmShowReport.aspx?path=NonConsumableGlassware.rdl&CategoryName=" + $("#CatagoryId1 option:selected").text() + "";
                window.location = x;
            }
            else {
                var x = "/Reporting/frmShowReport.aspx?path=NonConsumableInstrument.rdl&CategoryName=" + $("#CatagoryId1 option:selected").text() + "";
                window.location = x;
            }
        }
    });
</script>
<script>
    $(document).ready(function () {
        $('#dtHorizontalExample').DataTable({
            "scrollX": true
        });
        $('.dataTables_length').addClass('bs-select');
    });
</script>
