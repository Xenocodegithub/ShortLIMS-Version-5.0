@model IEnumerable<LIMS_DEMO.Core.Inventory.PurchaseEntity>
@{
    ViewBag.Title = "PurchaseOrderList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main-container">
    <div class="pd-ltr-20 xs-pd-20-10">
        <div class="min-height-200px">
            <div class="page-header">
                <div class="row">
                    <div class="col-md-6 col-sm-12">
                        <div class="title">
                            <h4>Inventory</h4>
                        </div>
                        <nav aria-label="breadcrumb" role="navigation">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="index.html">Purchase</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Purchase Order List</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
            <div class="card-box mb-30">
                <div class="card-box mb-30 card text-white bg-info card-box">
                    <div class="pd-20" style="border-bottom:solid">
                        <h4 class="text-blue h4">PURCHASE ORDER LIST</h4>
                    </div>
                    <br />
                    <div class="pb-20">
                        <table class="data-table table multiple-select-row nowrap">
                            <thead>
                                <tr>
                                    <th class="table-plus datatable-nosort">SUPPLIER NAME</th>
                                    <th>ITEM</th>
                                </tr>
                            </thead>
                            <tbody style="color:white">
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.SupplierName)
                                        </td>
                                        <td>
                                            @Html.HiddenFor(modelItem => item.PurchaseRequestID)
                                            @Html.HiddenFor(modelItem => item.InventoryTypeID)
                                            @Html.ActionLink(item.Item, "PurchaseFormHO", "Purchase", new { @PurchaseRequestID = item.PurchaseRequestID }, new { Style = "color:Chartreuse" })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
