@model IEnumerable<LIMS_DEMO.Areas.Configuration.Models.ParameterMasterModel>
@{
    ViewBag.Title = "ParameterMasterList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="mobile-menu-overlay"></div>
<div class="main-container">
    <div class="pd-ltr-20 xs-pd-20-10">
        <div class="min-height-200px">
            <div class="page-header">
                <div class="row">
                    <div class="col-md-6 col-sm-12">
                        <div class="title">
                            <h4>Parameter Master List</h4>
                        </div>
                        <nav aria-label="breadcrumb" role="navigation">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="#">Configuration</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Parameter Master List</li>
                            </ol>
                        </nav>
                    </div>
                    <div class="col-md-6 col-sm-12 text-right">
                        <div class="dropdown">
                            <a class="btn btn-info btn-sm" href="/Configuration/ParameterMaster/AddParameterMaster" role="button">
                                Add Parameter Master
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Simple Datatable start -->
            <div class="pd-20 card-box mb-30">
                <div class="clearfix">
                    <div class="pull-left">
                        <h4 class="text-blue h4">Parameter Master Lis</h4>
                    </div>
                </div>
                <div class="pb-20">
                    <table id="dtHorizontalExample" class="table table stripe hover nowrap">
                        <thead>
                            <tr class="thead-dark">
                                <th class="table-plus datatable-nosort">Sr.No.</th>
                                <th class="table-plus datatable-nosort">Parameter</th>
                                <th class="table-plus datatable-nosort">Discipline Name</th>
                                <th class="table-plus datatable-nosort">Unit</th>
                                <th class="table-plus datatable-nosort">TestMethod</th>
                                <th class="table-plus datatable-nosort">ProductGroup Name</th>
                                <th class="table-plus datatable-nosort">SubGroup Name</th>
                                <th class="table-plus datatable-nosort">Matrix Name</th>
                                <th class="table-plus datatable-nosort">Charges</th>
                                <th class="table-plus datatable-nosort">Max Testing</th>
                                <th class="table-plus datatable-nosort">LOD</th>
                                <th class="table-plus datatable-nosort">Permissible Min</th>
                                <th class="table-plus datatable-nosort">Permissible Max</th>
                                <th class="table-plus datatable-nosort">Regulatory Min</th>
                                <th class="table-plus datatable-nosort">Regulatory Max</th>
                                <th class="table-plus datatable-nosort">Is Field</th>
                                <th class="table-plus datatable-nosort">Is NABL Accredited</th>
                                <th class="table-plus datatable-nosort">IsIndustry Specified</th>
                                <th class="table-plus datatable-nosort">Is Active</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ int rowNo = 0; }
                            @if (Model.Count() > 0)
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="table-plus">@{rowNo++;}@rowNo</td>
                                        <td>@item.Parameter</td>
                                        <td>@item.DisciplineName</td>
                                        <td>@item.Unit</td>
                                        <td>@item.TestMethod</td>
                                        <td>@item.ProductGroupName</td>
                                        <td>@item.SubGroupName</td>
                                        <td>@item.MatrixName</td>
                                        <td>@item.Charges</td>
                                        <td>@item.MaxRange</td>
                                        <td>@item.LOD</td>
                                        <td>@item.PermissibleMin</td>
                                        <td>@item.PermissibleMax</td>
                                        <td>@item.RegulatoryMin</td>
                                        <td>@item.RegulatoryMax</td>
                                        <td>@item.IsField</td>
                                        <td>@item.IsNABLAccredited</td>
                                        <td>@item.IsIndustrySpecified</td>
                                        <td style="align-items:center">
                                            @if (item.IsActive == true)
                                            {
                                                <i class="icon-copy fa fa-check" style="color:green" aria-hidden="true"></i>
                                            }
                                            else
                                            {
                                                <i class="icon-copy fa fa-close" style="color:red" aria-hidden="true"></i>
                                            }
                                        </td>
                                        @*<td>
                                            <div class="dropdown">
                                                <a class="btn btn-link font-24 p-0 line-height-1 no-arrow dropdown-toggle" href="#" role="button" data-toggle="dropdown">
                                                    <i class="dw dw-more"></i>
                                                </a>
                                                <div class="dropdown-menu dropdown-menu-right dropdown-menu-icon-list">
                                                    <a class="dropdown-item" href="@Url.Action("AddParameterMaster","ParameterMaster",new {ParameterMappingId=item.ParameterMappingId })"><i class="dw dw-edit2"></i> Edit</a>
                                                    <a class="dropdown-item" href="#" onclick="Delete(@item.ParameterMappingId);"><i class="dw dw-delete-3"></i>Delete</a>
                                                </div>
                                            </div>
                                        </td>*@
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@Scripts.Render("~/bundles/unobtrusive")
<script>
    function Delete(id) {

        swal({
            title: 'Are you sure?',
            text: "You won't be able to revert this!",
            type: 'warning',
            showCancelButton: true,
            confirmButtonText: 'Yes, delete it!',
            cancelButtonText: 'No, cancel!',
            confirmButtonClass: 'btn btn-success margin-5',
            cancelButtonClass: 'btn btn-danger margin-5',
            buttonsStyling: false
        }).then(function () {
            debugger;
            Deleted(id);

        })
    }
    function Deleted(Id) {
        $.ajax({
            url: '/ParameterMaster/DeleteParameterMaster',
            type: 'Get',
            contentType: 'application/x-www-form-urlencoded; charset=UTF-8',
            dataType: 'json',
            data: { ParameterMappingId: Id },

            success: function (result) {
                debugger;
                if (result == "success") {
                    swal(
                        'Deleted!',
                        'Your file has been deleted.',
                        'success'
                    )
                    var x = "/Configuration/ParameterMaster/ParameterMasterList"
                    window.location = x;
                }

            },
            error: function (data) {
            }
        });
    }

</script>
<script>
    $(document).ready(function () {
        $('#dtHorizontalExample').DataTable({
            "scrollX": true
        });
        $('.dataTables_length').addClass('bs-select');
    });
</script>

