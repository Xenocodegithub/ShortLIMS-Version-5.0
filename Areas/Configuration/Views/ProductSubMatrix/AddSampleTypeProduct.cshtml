@model LIMS_DEMO.Areas.Configuration.Models.ProductGroupMasterModel
@{
    ViewBag.Title = "AddSampleTypeProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="main-container">
    <div class="pd-ltr-20 xs-pd-20-10">
        <div class="min-height-200px">

            <div class="page-header">
                <div class="row">
                    <div class="col-md-6 col-sm-12">
                        <div class="title">
                            <h4>Sample Type Product Name</h4>
                        </div>
                        <nav aria-label="breadcrumb" role="navigation">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="index.html">Configuration</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Product Sub Matrix</li>
                                <li class="breadcrumb-item active" aria-current="page">Add Sample type Product</li>
                            </ol>
                        </nav>
                    </div>
                  
                </div>
            </div>
            <!-- Default Basic Forms Start -->
            <div class="pd-20 card-box mb-30">
                <div class="clearfix">
                    <div class="pull-left">
                        <h4 class="text-blue h4">Add Sample type Product</h4>
                    </div>
                </div>
                @using (Ajax.BeginForm("AddSampleTypeProduct", "ProductSubMatrix", new AjaxOptions() { HttpMethod = "Post", OnSuccess = "AddSampleSuccess" }))
                {
                    @Html.HiddenFor(Model => Model.SampleTypeProductId)
                    <div class="form-group row">
                        <label class="col-sm-12 col-md-2 col-form-label">SampleTypeProduct Name:</label>
                        <div class="col-sm-4">
                            @*<input class="form-control" placeholder="Search Here" type="search">*@
                            @Html.TextBoxFor(model => model.SampleTypeProductName, new { @class = "form-control ", placeholdder = "SampleTypeProductName" })
                            @Html.ValidationMessageFor(model => model.SampleTypeProductName, "", new { @class = "text-danger" })
                        </div>
                        <label class="col-sm-12 col-md-2 col-form-label">SampleTypeProduct Code: </label>
                        <div class="col-sm-4">
                            @*<input class="form-control" placeholder="Search Here" type="search">*@
                            @Html.TextBoxFor(model => model.SampleTypeProductCode, new { @class = "form-control", placeholdder = "SampleTypeProductCode" })
                            @Html.ValidationMessageFor(model => model.SampleTypeProductCode, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-12 col-md-2 col-form-label">Is Active:</label>
                        <div class="col-sm-12 col-md-10">
                            <label for="square-radio-1" class="radio-btn-pd"> @Html.RadioButtonFor(model => model.IsActive, "True", new { @checked = "checked" }) Yes </label>
                            <label for="square-radio-2" class="radio-btn-pd"> @Html.RadioButtonFor(model => model.IsActive, "False") No</label>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-12 col-md-12">
                            <a class="btn btn-danger btn-sm" href="@Url.Action("SampleTypeProductList", "ProductSubMatrix")">Back</a>&emsp;
                            <button type="submit" class="btn btn-info btn-sm" style="float:right">Save</button>
                        </div>
                    </div>
                }
            </div>
                   
                
                <!-- Default Basic Forms End -->
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/unobtrusive")
    <script>
    function AddSampleSuccess(result) {
        if (result.Status == "success") {
            alert(result.message);
            location.href = '/Configuration/ProductSubMatrix/SampleTypeProductList';
        }
    }
    </script>


