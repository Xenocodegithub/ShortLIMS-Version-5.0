@model IEnumerable<LIMS_DEMO.Areas.Configuration.Models.MatrixMasterModel>
@{
    ViewBag.Title = "MatrixList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="mobile-menu-overlay"></div>
<div class="main-container">
    <div class="pd-ltr-20 xs-pd-20-10">
        <div class="min-height-200px">
            <div class="page-header">
                <div class="row">
                    <div class="col-md-6 col-sm-12">
                        <div class="title">
                            <h4>MatrixList</h4>
                        </div>
                        <nav aria-label="breadcrumb" role="navigation">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="index.html">Configuration</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Matrix List</li>
                            </ol>
                        </nav>
                    </div>
                    <div class="col-md-6 col-sm-12 text-right">
                        <div class="dropdown">
                            <a class="btn btn-primary" href="@Url.Action("AddMatrix","ProductSubMatrix")" role="button">
                                Add Matrix
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Simple Datatable start -->
            <div class="card-box mb-30">
                <div class="pd-20">
                    <h4 class="text-blue h4">Matrix List</h4>
                    <p class="mb-0"> <a class="text-primary" href="https://datatables.net/" target="_blank"></a></p>
                </div>
                <div class="pb-20">
                    <table class="data-table table stripe hover nowrap">
                        <thead>
                            <tr>
                                <th class="table-plus datatable-nosort">SR.NO.</th>
                                <th class="table-plus datatable-nosort">Sample Type Product Name</th>
                                <th class="table-plus datatable-nosort">Product Group Name</th>
                                <th class="table-plus datatable-nosort">Sub Group Name</th>
                                <th class="table-plus datatable-nosort">MatrixName</th>
                                <th class="table-plus datatable-nosort">MatrixCode</th>
                                <th class="table-plus datatable-nosort">IsActive</th>
                                <th class="table-plus datatable-nosort">Action</th>
                            </tr>
                        </thead>
                        <tbody>

                            @{ int rowNo = 0; }
                            @if (Model.Count() > 0)
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="table-plus">@{rowNo++;}@rowNo</td>
                                        <td>@item.SampleTypeProductName</td>
                                        <td>@item.ProductGroupName</td>
                                        <td>@item.SubGroupName</td>
                                        <td>@item.MatrixName</td>
                                        <td>@item.MatrixCode</td>
                                        <td style="align-items:center">
                                            @if (item.IsActive == true)
                                            {
                                                <i class="icon-copy fa fa-check" style="color:green" aria-hidden="true"></i>
                                            }
                                            else
                                            {
                                                <i class="icon-copy fa fa-close" style="color:red" aria-hidden="true"></i>
                                            }
                                        </td>
                                        <td>
                                            <div class="dropdown">
                                                <a class="btn btn-link font-24 p-0 line-height-1 no-arrow dropdown-toggle" href="#" role="button" data-toggle="dropdown">
                                                    <i class="dw dw-more"></i>
                                                </a>
                                                <div class="dropdown-menu dropdown-menu-right dropdown-menu-icon-list">
                                                    <a class="dropdown-item" href="@Url.Action("AddMatrix","ProductSubMatrix",new {ProductGroupId=item.ProductGroupId,SubGroupId=item.SubGroupId,MatrixId=item.MatrixId })"><i class="dw dw-edit2"></i> Edit</a>
                                                    <a class="dropdown-item" href="#" onclick="Delete(@item.SampleTypeProductId,@item.ProductGroupId,@item.SubGroupId,@item.MatrixId);"><i class="dw dw-delete-3"></i>Delete</a>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="5">
                                    <div class="pagination pagination-centered"></div>
                                </td>
                            </tr>

                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    function Delete(id1, id2, id3,id4) {
        debugger;
        swal({
            title: 'Are you sure?',
            text: "You won't be able to revert this!",
            type: 'warning',
            showCancelButton: true,
            confirmButtonText: 'Yes, delete it!',
            cancelButtonText: 'No, cancel!',
            confirmButtonClass: 'btn btn-success margin-5',
            cancelButtonClass: 'btn btn-danger margin-5',
            buttonsStyling: false
        }).then(function () {
            $.ajax({
                url: '/ProductSubMatrix/DeleteMatrix',
                type: 'Get',
                contentType: 'application/x-www-form-urlencoded; charset=UTF-8',
                dataType: 'json',
                data: { SampleTypeProductId: id1, ProductGroupId: id2, SubGroupId: id3, MatrixId: id4 },
                success: function (result) {
                    debugger;
                    swal(
                        'Deleted!',
                        'Your file has been deleted.',
                        'success'
                    )
                },
                error: function (data) {
                }
            });


        });
    }
</script>
