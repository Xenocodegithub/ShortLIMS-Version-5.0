@model IEnumerable<LIMS_DEMO.Areas.Arrival.Models.SampleArrivalModel>

@*<table class="table table-striped table-bordered table-hover" width="100%" style="font-size:11px;overflow:scroll">*@
<table class="table table stripe  table-bordered alert-dark hover nowrap">
    <thead>
        <tr class="thead-dark">
            <th class="table-plus datatable-nosort">
                SrNo
            </th>
            <th>
                Sampling Media
            </th>
        </tr>
    </thead>
    <tbody style="text-align:center;">
        @foreach (var item in Model)
        {
            <tr>
                <td class="width-5">
                    @Html.DisplayFor(modelItem => item.SerialNo)
                </td>

                <td class="width-20">
                    @Html.DisplayFor(modelItem => item.SampleDevice)
                </td>

            </tr>
        }
    </tbody>
</table>