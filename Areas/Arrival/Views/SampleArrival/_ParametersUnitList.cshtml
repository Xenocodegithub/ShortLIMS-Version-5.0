
@model IEnumerable<LIMS_DEMO.Areas.Arrival.Models.SampleArrivalModel>

<table class="table table stripe  table-bordered hover nowrap">
    <thead>
        <tr class="thead-dark">
            <th class="table-plus datatable-nosort">
                SrNo
            </th>
            <th>
                Parameters
            </th>
            <th>
                Units
            </th>
            <th>
                Discipline
            </th>
        </tr>
    </thead>
    <tbody style="text-align:center;">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SerialNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ParameterName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Unit)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Discipline)
                </td>
            </tr>
        }
    </tbody>
</table>
   