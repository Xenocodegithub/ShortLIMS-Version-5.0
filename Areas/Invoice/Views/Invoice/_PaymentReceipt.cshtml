@model LIMS_DEMO.Areas.Invoice.Models.InvoiceModel
<div class="main-container">
    <div class="pd-ltr-20 xs-pd-20-10">
        <div class="min-height-200px">
            <div class="page-header">
                <div class="row">
                    <div class="col-md-6 col-sm-12">
                        <div class="title">
                            <h4>Reciept</h4>
                        </div>

                    </div>
                    <div class="col-md-6 col-sm-12 text-right">
                        <div class="dropdown">
                            <a class="btn btn-primary dropdown-toggle" href="#" role="button" data-toggle="dropdown">
                                January 2018
                            </a>
                        </div>
                    </div>
                </div>
                <div class="invoice-wrap">
                    <div class="invoice-box">
                        <div class="invoice-header">
                            <div class="logo text-center">
                                <img src="vendors/images/deskapp-logo.png" alt="">
                            </div>
                        </div>
                        <h4 class="text-center mb-30 weight-600">RECIEPT</h4>
                        <div class="row pb-30">
                            <div class="col-md-6">
                                <div class="text-left">
                                    <p class="font-14 mb-5">Customer Name </p>
                                    <p class="font-14 mb-5">Invoice Number</p>
                                    <p class="font-14 mb-5">Reciept Number</p>
                                </div>
                            </div>
                        </div>
                        <div class="invoice-desc pb-30">
                            <div class="invoice-desc-head clearfix">
                                <div class="invoice-rate">Invoice No</div>
                                <div class="invoice-hours">Receipt No</div>
                                <div class="invoice-subtotal">Received From</div>
                                <div class="invoice-subtotal">Pay By</div>
                                <div class="invoice-subtotal">Sum of Rupees</div>
                            </div>
                            <div class="invoice-desc-body">
                                <ul>
                                    <li class="clearfix">
                                        <div class="invoice-sub">Website Design</div>
                                        <div class="invoice-rate">$20</div>
                                        <div class="invoice-hours">100</div>
                                        <div class="invoice-subtotal"><span class="weight-600">$2000</span></div>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- js -->
<script src="vendors/scripts/core.js"></script>
<script src="vendors/scripts/script.min.js"></script>
<script src="vendors/scripts/process.js"></script>
<script src="vendors/scripts/layout-settings.js"></script>
