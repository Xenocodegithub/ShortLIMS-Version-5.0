@model IList<LIMS_DEMO.Areas.Invoice.Models.InvoiceModel>
@{
    ViewBag.Title = "DailyInvoiceList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="main-container">
    <div class="pd-ltr-20 xs-pd-20-10">
        <div class="min-height-200px">
            <div class="page-header">
                <div class="row">
                    <div class="col-md-6 col-sm-12">
                        <div class="title">
                            <h4>Invoice</h4>
                        </div>
                        <nav aria-label="breadcrumb" role="navigation">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="#">Reject Invoice</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Reject Invoice</li>
                                <li class="breadcrumb-item active" aria-current="page">Reject Invoice List</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>

            <!-- Default Basic Forms Start -->
            <div class="pd-20 card-box mb-30">
                <div class="clearfix">
                    <div class="pull-left">
                        <h4 class="text-blue h4">Reject Invoice List</h4>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-12 col-md-2 col-form-label"> From Date:</label>
                    <div class="col-sm-3 form-group row">
                        <input type="date" id="FromDate" name="FromDate" class="form-control" placeholder="dd/MM/yyyy" />
                    </div>
                    <label class="col-sm-12 col-md-2 col-form-label">To Date:</label>
                    <div class="col-sm-3 form-group row">
                        <input type="date" id="ToDate" name="ToDate" class="form-control" placeholder="dd/MM/yyyy" />
                    </div>
                    <div class="col-sm-2">
                        <button class="btn btn-success btn-sm" onclick="SearchWorkOrder();" type="button">Search</button>
                    </div>
                </div>


                <!-- Simple Datatable start -->

                <table id="dtHorizontalExample" class="table table stripe hover nowrap">
                    <thead>
                        <tr class="thead-dark">
                            <th>
                                Sr. No.
                            </th>
                            <th>
                                Customer Name
                            </th>
                            <th class="table-plus datatable-nosort">
                                Work Order No
                            </th>
                            <th>
                                Invoice No
                            </th>
                            <th>
                                Amount
                            </th>
                            <th>
                                Paid Amt.
                            </th>
                            <th>Balance</th>
                            <th>
                                Invoice Date
                            </th>

                        </tr>
                    </thead>
                    <tbody>

                        @{ int rowNo = 0; }
                        @if (Model.Count() > 0)
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td class="table-plus">@{rowNo++;}@rowNo</td>

                                    <td>@item.RegistrationName</td>
                                    <td>@item.WorkOrderNo</td>
                                    <td>@item.InvoiceNumber</td>
                                    <td>@item.UnitPrice</td>
                                    <td>@item.PaidAmount</td>
                                    <td>@item.BalanceAmount</td>
                                    <td>@item.InvoiceDate.ToString("dd/MM/yyyy")</td>


                                </tr>
                            }
                        }
                    </tbody>

                </table>

                <!-- Simple Datatable End -->

            </div>
            <!-- Default Basic Forms End -->
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#dtHorizontalExample').DataTable({
            "scrollX": true
        });
        $('.dataTables_length').addClass('bs-select');
    });
</script>

