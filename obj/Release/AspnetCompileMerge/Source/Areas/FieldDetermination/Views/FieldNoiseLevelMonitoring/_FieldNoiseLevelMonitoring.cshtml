
@model LIMS_DEMO.Areas.FieldDetermination.Models.FDNoiseLevelMonitoringModel

<div class="col-lg-12">
    <div class="card shadow">
        <div class="card-body">
            @Html.HiddenFor(model => model.FieldNoiseId)

            @if (@Model.flag == false)
            {
                <div class="row">
                    <table class="table table-bordered" id="datatable" data-filter="#filter" data-filter-text-only="true" width="100%" cellspacing="0">
                        <tr>
                            <th>
                                Distance from Source (meter)
                            </th>
                            <th>
                                Prominent Noise Source
                            </th>
                            <th>
                                Background Noise Level(dB)
                            </th>
                        </tr>
                        <tr>
                            <td>
                                @Html.EditorFor(model => model.DistancefrmSource, new { htmlAttributes = new { @class = "form-control", @placeholder = "Distance from Source" } })
                            </td>
                            <td>
                                @Html.EditorFor(model => model.ProminentNoiseSource, new { htmlAttributes = new { @class = "form-control", @placeholder = "Prominent Noise Source" } })
                            </td>
                            <td>
                                @Html.EditorFor(model => model.BackgroundNoiselevel, new { htmlAttributes = new { @class = "form-control", @placeholder = "Background Noise level" } })
                            </td>
                        </tr>
                    </table>
                </div>
            }
            @if (@Model.flag == true)
            {
                <div class="row">
                    <div class="col-md-12">
                        <table class="table table-bordered" id="datatable" data-filter="#filter" data-filter-text-only="true" width="100%" cellspacing="0">
                            <tr>
                                <th>
                                    Leq Average (Day Time)<br />
                                    Leq Average (Night Time)
                                </th>
                                <th>
                                    L10 Average (Day Time)<br />
                                    L10 Average (Night Time)
                                </th>
                                <th>
                                    L50 Average (Day Time)<br />
                                    L50 Average (Night Time)
                                </th>
                                <th>
                                    L90 Average (Day Time)<br />
                                    L90 Average (Night Time)
                                </th>
                                <th>
                                    Lmin Average (Day Time)<br />
                                    Lmin Average (Night Time)
                                </th>
                                <th>
                                    Lmax Average (Day Time)<br />
                                    Lmax Average (Night Time)
                                </th>
                            </tr>
                            <tr>
                                <td>
                                    @Html.EditorFor(model => model.LeqAvgDayTime, new { htmlAttributes = new { @class = "form-control", @placeholder = "AvgDayTime" } })&nbsp;
                                    @Html.EditorFor(model => model.LeqAvgNightTime, new { htmlAttributes = new { @class = "form-control", @placeholder = "AvgNightTime" } })
                                </td>
                                <td>
                                    @Html.EditorFor(model => model.L10AvgDayTime, new { htmlAttributes = new { @class = "form-control", @placeholder = "AvgDayTime" } })&nbsp;
                                    @Html.EditorFor(model => model.L10AvgNightTime, new { htmlAttributes = new { @class = "form-control", @placeholder = "AvgNightTime" } })
                                </td>
                                <td>
                                    @Html.EditorFor(model => model.L50AvgDayTime, new { htmlAttributes = new { @class = "form-control", @placeholder = "AvgDayTime" } })&nbsp;
                                    @Html.EditorFor(model => model.L50AvgNightTime, new { htmlAttributes = new { @class = "form-control", @placeholder = "AvgNightTime" } })
                                </td>
                                <td>
                                    @Html.EditorFor(model => model.L90AvgDayTime, new { htmlAttributes = new { @class = "form-control", @placeholder = "AvgDayTime" } })&nbsp;
                                    @Html.EditorFor(model => model.L90AvgNightTime, new { htmlAttributes = new { @class = "form-control", @placeholder = "AvgNightTime" } })
                                </td>
                                <td>
                                    @Html.EditorFor(model => model.LminAvgDayTime, new { htmlAttributes = new { @class = "form-control", @placeholder = "AvgDayTime" } })&nbsp;
                                    @Html.EditorFor(model => model.LminAvgNightTime, new { htmlAttributes = new { @class = "form-control", @placeholder = "AvgNightTime" } })
                                </td>
                                <td>
                                    @Html.EditorFor(model => model.LmaxAvgDayTime, new { htmlAttributes = new { @class = "form-control", @placeholder = "AvgDayTime" } })&nbsp;
                                    @Html.EditorFor(model => model.LmaxAvgNightTime, new { htmlAttributes = new { @class = "form-control", @placeholder = "AvgNightTime" } })
                                </td>
                            </tr>
                        </table>
                    </div>

                </div>
            }

            <div class="row">
                <div class="col-md-12">
                    <table class="table table-bordered" id="datatable" data-filter="#filter" data-filter-text-only="true" width="100%" cellspacing="0">
                        <tr>
                            <th>
                                Date Monitoring
                            </th>
                            <th>
                                Time/Duration of Monitoring
                            </th>
                            <th>
                                Location
                            </th>
                            <th>
                                Location Zone
                            </th>
                            <th>
                                Specific Height/distance
                            </th>
                            <th>
                                Intrument Make
                            </th>
                        </tr>
                        <tr>
                            <td>
                                @if (Model.MonitoringDate == null)
                                {
                                    <input type="date" id="MonitoringDate" name="MonitoringDate" class="input-group col-sm-12" />
                                }
                                else
                                {
                                    var x = Model.MonitoringDate.ToString();
                                    var y = x.Split(new char[] { ' ' });
                                    y[0] = y[0].Replace("/", "-").ToString();
                                    <input type="text" value="@Convert.ToDateTime(y[0]).ToString("dd/MM/yyyy")" disabled class="input-group col-sm-12" />
                                }
                            </td>
                            <td>
                                @Html.EditorFor(model => model.MonitoringTime, new { htmlAttributes = new { @class = "form-control", @placeholder = "Monitoring Time" } })
                            </td>
                            <td>
                                @Html.EditorFor(model => model.Location, new { htmlAttributes = new { @class = "form-control", @placeholder = "Location" } })
                            </td>
                            <td>
                                @Html.EditorFor(model => model.LocationZone, new { htmlAttributes = new { @class = "form-control", @placeholder = "Location Zone" } })
                            </td>
                            <td>
                                @Html.EditorFor(model => model.LocationHeight, new { htmlAttributes = new { @class = "form-control", @placeholder = "Location Height" } })
                            </td>
                            <td>
                                @Html.EditorFor(model => model.InstrumentMake, new { htmlAttributes = new { @class = "form-control", @placeholder = "Instrument Make" } })
                            </td>
                        </tr>
                        <tr>
                            <th>
                                Instrument Model
                            </th>
                            <th>
                                Instrument ID
                            </th>
                            <th>
                                Height of Microphone
                            </th>
                            <th>
                                Obstacles if Any
                            </th>
                            <th>
                                Isolation if Any
                            </th>
                            <th>
                                Wind Type
                            </th>
                        </tr>
                        <tr>
                            <td>
                                @Html.EditorFor(model => model.InstrumentModel, new { htmlAttributes = new { @class = "form-control", @placeholder = "Instrument Model" } })
                            </td>
                            <td>
                                @Html.EditorFor(model => model.InstrumentID, new { htmlAttributes = new { @class = "form-control", @placeholder = "Instrument ID" } })
                            </td>
                            <td>
                                @Html.EditorFor(model => model.MicrophoneHeight, new { htmlAttributes = new { @class = "form-control", @placeholder = "Microphone Height" } })
                            </td>
                            <td>
                                @Html.EditorFor(model => model.Obstacles, new { htmlAttributes = new { @class = "form-control", @placeholder = "Obstacles" } })
                            </td>
                            <td>
                                @Html.EditorFor(model => model.Isolation, new { htmlAttributes = new { @class = "form-control", @placeholder = "Isolation" } })
                            </td>
                            <td>
                                @Html.EditorFor(model => model.WindType, new { htmlAttributes = new { @class = "form-control", @placeholder = "WindType" } })
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>





