<!-- Simple Datatable start -->
<div class="card-box mb-30">
    <div class="pb-20">
        @if (Model.GridModel.Count() > 0)
        {
            <table id="tblField" class="data-table table stripe hover nowrap" style="width:100%; overflow-x:scroll">
                <thead>
