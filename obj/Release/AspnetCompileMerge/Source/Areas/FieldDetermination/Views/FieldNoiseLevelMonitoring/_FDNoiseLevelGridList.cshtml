                        </th>
                        <th class="table-plus datatable-nosort">
                            Lmin Fast Response/Leq Slow Response
                        </th>
                        <th class="table-plus datatable-nosort">
                            Lmax Fast Response/Leq Slow Response
                        </th>
                        @if (Model.CurrentStatus != "SampleColl")
                        {
                            <th class="table-plus datatable-nosort">
                                Action
                            </th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.GridModel.Count; i++)
                    {
                        <tr>
                            <td>
                                @Model.GridModel[i].SrNo
                            </td>
                            <td>
                                @Model.GridModel[i].ShiftName
                            </td>
                            @*<td>
                                    @Model.GridModel[i].ParameterName
                                </td>*@
                            <td>
                                @Model.GridModel[i].TestMethodName
                            </td>
                            <td>
                                @Model.GridModel[i].LocationGrid
                            </td>
                            <td>
                                @Model.GridModel[i].DayNight
                            </td>
                            <td>
                                @Model.GridModel[i].TimeDuration
                            </td>
                            <td>
                                @Model.GridModel[i].FileName
                            </td>
                            <td>
                                Fast Response: @Model.GridModel[i].LeqFastResponse <br />
                                Slow Response: @Model.GridModel[i].LeqSlowResponse
                            </td>
                            <td>
                                Fast Response: @Model.GridModel[i].L10FastResponse <br />
                                Slow Response: @Model.GridModel[i].L10SlowResponse
                            </td>
                            <td>
                                Fast Response: @Model.GridModel[i].L50FastResponse  <br />
                                Slow Response: @Model.GridModel[i].L50SlowResponse
                            </td>
                            <td>
                                Fast Response: @Model.GridModel[i].L90FastResponse  <br />
                                Slow Response: @Model.GridModel[i].L90SlowResponse
                            </td>
                            <td>
                                Fast Response: @Model.GridModel[i].LminFastResponse <br />
                                Slow Response: @Model.GridModel[i].LminSlowResponse
                            </td>
                            <td>
                                Fast Response: @Model.GridModel[i].LmaxFastResponse <br />
                                Slow Response: @Model.GridModel[i].LmaxSlowResponse
                            </td>
                            @if (Model.CurrentStatus != "SampleColl")
                            {
                                <td>
                                    @*<a href="#" onclick="funEditField(@Model.GridModel[i].SrNo);">Edit</a> |*@
                                    <a href="#" onclick="funDeleteField(@Model.GridModel[i].SrNo);">Delete</a>
                                </td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        }

    </div>
</div>
