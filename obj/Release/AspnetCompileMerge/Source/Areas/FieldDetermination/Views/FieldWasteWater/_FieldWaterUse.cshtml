@model LIMS_DEMO.Areas.FieldDetermination.Models.FDWasteWaterModel

<div class="row">
    <div class="col-sm-6 form-group">
        @Html.LabelFor(model => model.WaterUse, "Water Use:", htmlAttributes: new { @class = "control-label col-sm-4 " })
        <div class="col-sm-6">
            @Html.EditorFor(model => model.WaterUse, new { htmlAttributes = new { @class = "form-control", @style = "font-size:13px;" } })
        </div>
    </div>
    <div class="col-sm-6 form-group">
        @Html.LabelFor(model => model.AnyOtherObservation, "Any Other Observation:", htmlAttributes: new { @class = "control-label col-sm-6" })
        <div class="col-sm-6">
            @Html.EditorFor(model => model.AnyOtherObservation, new { htmlAttributes = new { @class = "form-control", @style = "font-size:13px;" } })
            @Html.ValidationMessageFor(model => model.AnyOtherObservation, "", new { @class = "text-danger" })
        </div>
    </div>
</div>

