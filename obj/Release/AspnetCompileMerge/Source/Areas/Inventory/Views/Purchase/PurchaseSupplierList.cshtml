@model IEnumerable<LIMS_DEMO.Areas.Inventory.Models.PurchaseModel>
@{
    ViewBag.Title = "PurchaseSupplierList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main-container">
    <div class="pd-ltr-20 xs-pd-20-10">
        <div class="min-height-200px">
            <div class="page-header">
                <div class="row">
                    <div class="col-md-6 col-sm-12">
                        <div class="title">
                            <h4>Inventory</h4>
                        </div>
                        <nav aria-label="breadcrumb" role="navigation">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="index.html">Purchase</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Purchase Supplier List</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
            <!-- Default Basic Forms Start -->
            <div class="pd-20 card-box mb-30">
                <div class="clearfix">
                    <div class="pull-left">
                        <h4 class="text-blue h4">Purchase Supplier List</h4>
                    </div>
                </div>
                <div class="pb-20">
                    <table id="dtHorizontalExample" class="table table stripe hover nowrap">
                        <thead>
                            <tr class="thead-dark">
                                @*<th class="width-10">
                                All
                            </th>*@
                                <th>
                                    @Html.DisplayNameFor(model => model.SupplierName)|Address
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.SupplierContactPerson)
                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model.SupplierContactNo)
                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model.Product)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Approved)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ApprovedBy)

                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.DateOfApproval)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Remark)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.IsActive)
                                </th>
                                <th>
                                    Action
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    @*<td>
                                    @Html.DisplayFor(modelItem => item.All)
                                </td>*@
                                    <td>

                                        @Html.DisplayFor(modelItem => item.SupplierName) |
                                        @Html.DisplayFor(modelItem => item.SupplierAddress)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SupplierContactPerson)

                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SupplierContactNo)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Product)
                                    </td>
                                    <td>
                                        @if (item.Approved == true)
                                        {
                                            <i class="micon dw icon-copy dw dw-checked" aria-hidden="true"></i>
                                        }
                                        else
                                        {
                                            <i class="icon-copy fa fa-close" style="color:red" aria-hidden="true"></i>
                                        }

                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ApprovedBy)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DateOfApproval)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => item.Remark)
                                    </td>
                                    <td>
                                        @{ string Active = "Yes"; if (item.IsActive) { Active = "Yes"; } else { Active = "No"; }
                                        }
                                        @Active
                                    </td>
                                    <td>
                                        <i class="icon-copy dw dw-edit-file"></i>
                                        @Html.ActionLink("Edit", "PurchasSupplierForm", new { PurchaseSupplierID = item.PurchaseSupplierID }) |

                                        <a  href="/Inventory/DeletePurchaseSupplier?PurchaseSupplierID=@item.PurchaseSupplierID" onclick="return confirm('Are you sure you want to delete this record?');"><i class="fa fa-trash-o" ></i>&nbsp;Delete</a>
                                    </td>
                                </tr>
                            }

                        </tbody>

                    </table>
                </div>
            </div>
        </div>
    </div>
   </div>
<script>
    $(document).ready(function () {
        $('#dtHorizontalExample').DataTable({
            "scrollX": true
        });
        $('.dataTables_length').addClass('bs-select');
    });
</script>