    function AreaChart() {
        var options2 = {
            series: [{
                name: 'Purchase',
                data: [11, 32, 45, 32, 34, 52, 41]
            }],
            chart: {
                height: 350,
                type: 'area',
                toolbar: {
                    show: false,
                }
            },
            plotOptions: {
                area: {
                    
                     colors: ["#6f42c1"],
                },
            },
            grid: {
                show: false,
                padding: {
                    left: 0,
                    right: 0
                }
            },
            dataLabels: {
                enabled: false
            },
            stroke: {
                curve: 'smooth'
            },
            xaxis: {
                type: 'Month',
                categories: ['Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug']
            },
            markers: {
                size: 4,
                colors: ["#6f42c1"],
            },
            tooltip: {
                x: {
                    format: 'dd/MM/yy HH:mm'
                },
            },
        };
        var chart = new ApexCharts(document.querySelector("#chart2"), options2);
        chart.render();
    }

</script>
