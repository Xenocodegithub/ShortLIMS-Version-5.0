@model IEnumerable<LIMS_DEMO.Core.Lab.ReviewerEntity>
@{
    ViewBag.Title = "SampleList";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var recordCount = Model.Count();
}
<div class="main-container">
    <div class="pd-ltr-20 xs-pd-20-10">
        <div class="min-height-200px">

            <div class="page-header">
                <div class="row">
                    <div class="col-md-6 col-sm-12">
                        <div class="title">
                            <h4>Reviewer</h4>
                        </div>
                        <nav aria-label="breadcrumb" role="navigation">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item active" aria-current="page">Reviewer</li>
                                <li class="breadcrumb-item active" aria-current="page">Sample List</li>
                            </ol>
                        </nav>
                    </div>

                </div>
            </div>

            <!-- Default Basic Forms Start -->
            <div class="pd-20 card-box mb-30">
                <div class="clearfix">
                    <div class="pull-left">
                        <h4 class="text-blue h4">Sample List</h4>
                    </div>
                </div>
                <div class="pb-20">
                    <table class="data-table table stripe hover nowrap">
                        <thead>
                            <tr class="thead-dark">
                                <th class="table-plus datatable-nosort">Sr No.</th>
                                <th class="width-30">
                                    Sample ID
                                </th>
                                <th class="width-15">
                                    Sample Type
                                </th>
                                <th class="width-15">
                                    Product Group
                                </th>
                                <th class="width-20">
                                    Sub Group
                                </th>
                                <th class="width-10">
                                    Matrix
                                </th>
                                <th class="width-10">
                                    Report
                                </th>
                                <th class="width-10">
                                    Status
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ int rowNo = 0; }
                            @if (Model.Count() > 0)
                            {
                                foreach (var item in Model)
                                {
                <tr>
                    <td class="table-plus">@{rowNo++;}@rowNo</td>
                    <td>
                        @Html.HiddenFor(modelitem => item.SampleCollectionId)
                        @Html.ActionLink(item.SampleNameOriginal, "ParameterList", "Reviewer", new { @SampleId = item.SampleCollectionId }, null)
                    </td>
                    <td>@item.SampleTypeProductName</td>
                    <td>@item.ProductGroupName</td>
                    <td>@item.SubGroupName</td>
                    <td>@item.MatrixName</td>
                    <td>@item.StatusName</td>
                    <td>
                        <a href="../../Reporting/frmShowReport.aspx?path=TesterReport.rdl&SampleCollectionId=@item.SampleCollectionId" target="_blank">Download</a>
                    </td>
                    @if (item.ReviewActive > 0)
                    {
        <td>
            <img src='/Content/images/active.png' alt='Active' id='imgStatus'>
        </td> }
                            else
                            {
        <td>
            <img src='/Content/images/unactive.png' alt='Inactive' id='imgStatus'>
        </td>}
                </tr>}
                            }
                        </tbody>
                       
                    </table>
                </div>

                <!-- Simple Datatable End -->
                <div class="collapse collapse-box" id="basic-form1">
                    <div class="code-box">
                        <div class="clearfix">
                            <a href="javascript:;" class="btn btn-primary btn-sm code-copy pull-left" data-clipboard-target="#copy-pre"><i class="fa fa-clipboard"></i> Copy Code</a>
                            <a href="#basic-form1" class="btn btn-primary btn-sm pull-right" rel="content-y" data-toggle="collapse" role="button"><i class="fa fa-eye-slash"></i> Hide Code</a>
                        </div>
                        <pre>
                        <code class="xml copy-pre" id="copy-pre"></code>
                        </pre>
                    </div>
                </div>
            </div>
            <!-- Default Basic Forms End -->
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#dtHorizontalExample').DataTable({
            "scrollX": true
        });
        $('.dataTables_length').addClass('bs-select');
    });
</script>